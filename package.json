{
	"name": "vscode-print",
	"displayName": "VS Code Printing",
	"description": "Syntax-coloured line-numbered printing in VS Code.",
	"version": "0.7.1",
	"icon": "PDCONSEC-zipper-PRINTER2.png",
	"author": {
		"name": "Peter Wone",
		"email": "peter.wone@outlook.com"
	},
	"publisher": "pdconsec",
	"repository": {
		"type": "git",
		"url": "https://github.com/PeterWone/vsc-print"
	},
	"engines": {
		"vscode": "^1.20.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"markdown.markdownItPlugins": true,
		"commands": [
			{
				"category": "%category.print%",
				"command": "extension.print",
				"title": "%extension.print.title%",
				"icon": {
					"dark": "./printer-icon-dog-ear-inverse.svg",
					"light": "./printer-icon-dog-ear.svg"
				}
			},
			{
				"category": "%category.print%",
				"command": "extension.browse",
				"title": "%extension.browse.title%"
			}
		],
		"configuration": [
			{
				"title": "%configuration.title%",
				"properties": {
					"%print.announcePortAcquisition%": {
						"type": "boolean",
						"default": false,
						"markdownDescription": "%print.announcePortAcquisition.description%"
					},
					"%print.lineSpacing%": {
						"type": "number",
						"enum": [
							1,
							1.5,
							2
						],
						"enumDescriptions": [
							"%print.lineSpacing.single%",
							"%print.lineSpacing.line-and-a-half%",
							"%print.lineSpacing.double%"
						],
						"description": "%print.lineSpacing.description%",
						"default": 1
					},
					"%print.fontSize%": {
						"type": "string",
						"enum": [
							"9pt",
							"10pt",
							"11pt",
							"11.5pt",
							"12pt",
							"13pt"
						],
						"description": "%print.fontSize%",
						"default": "10pt"
					},
					"%print.renderMarkdown%": {
						"type": "boolean",
						"default": true,
						"description": "%print.renderMarkdown.description%"
					},
					"%print.lineNumbers%": {
						"type": "string",
						"description": "%print.lineNumbers.description%",
						"enum": [
							"on",
							"off",
							"inherit"
						],
						"default": "inherit"
					},
					"%print.alternateBrowser%": {
						"type": "boolean",
						"description": "%print.alternateBrowser.description%",
						"default": true
					},
					"%print.browserPath%": {
						"type": "string",
						"description": "%print.browserPath.description%"
					},
					"%print.colourScheme%": {
						"type": "string",
						"default": "vs2015",
						"markdownDescription": "%print.colourScheme.description%"
					},
					"%print.printAndClose%": {
						"type": "boolean",
						"default": true,
						"description": "%print.printAndClose.description%"
					},
					"%print.editorContextMenuItemPosition%": {
						"default": "Top",
						"type": "string",
						"markdownDescription": "%print.editorContextMenuItemPosition.description%",
						"enum": [
							"Top",
							"Bottom",
							"None"
						]
					},
					"%print.dynamicPortMin%": {
						"type": "integer",
						"default": 49203,
						"description": "%print.dynamicPortMin.description%"
					},
					"%print.dynamicPortMax%": {
						"type": "integer",
						"default": 65535,
						"description": "%print.dynamicPortMax.description%"
					}
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId",
					"command": "extension.print",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "resourceLangId",
					"command": "extension.print",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceLangId",
					"command": "extension.print",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId && ecmPrint == Top",
					"command": "extension.print",
					"group": "navigation"
				},
				{
					"when": "resourceLangId && ecmPrint == Bottom",
					"command": "extension.print",
					"group": "Z_commands"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.6",
		"@types/node": "^11.13.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.33"
	},
	"dependencies": {
		"@types/highlight.js": "^9.12.3",
		"@types/markdown-it": "0.0.7",
		"highlight.js": "^9.14.2",
		"portfinder": "^1.0.20"
	}
}
