{
	"name": "print",
	"displayName": "Print via browser",
	"description": "",
	"version": "0.0.1",
	"author": {
		"name": "Peter Wone",
		"email": "peter.wone@outlook.com"
	},
	"publisher": "pdconsec",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.print"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.print",
				"title": "Print"
			}
		],
		"configuration": [
			{
				"title": "Printing",
				"properties": {
					"print.lineSpacing": {
						"type": "number",
						"enum":[1,1.5,2],
						"enumDescriptions": ["Single spaced", "Line and a half", "Double spaced"],
						"description": "Vertical spacing of lines",
						"default": 1
					},
					"print.margin": {
						"type": "integer",
						"description": "Margin (mm)",
						"default": 10
					},
					"print.fontSize": {
						"type": "string",
						"enum": ["9pt","10pt","11pt","11.5pt","12pt","13pt"],
						"description": "Font size",
						"default": "10pt"
					},
					"print.paperSize": {
						"type": "string",
						"description": "Paper size",
						"enum": [
							"A3", 
							"A4", 
							"Letter"
						],
						"enumDescriptions": [
							"A3", 
							"A4", 
							"Letter"
						],
						"default": "A4"
					},
					"print.lineNumbers": {
						"type": "string",
						"description": "Line numbers",
						"enum": [
							"on",
							"off",
							"inherit"
						],
						"default": "on"
					},
					"print.browserPath": {
						"type": "string",
						"description": "Browser executable path (empty for default)"
					},
					"print.port": {
						"type": "integer",
						"description": "Embedded webserver port",
						"default": 5050
					}
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId",
					"command": "extension.print",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "resourceLangId",
					"command": "extension.print",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.26",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/highlight.js": "^9.12.3",
		"@types/tmp": "0.0.34",
		"highlight.js": "^9.14.2",
		"n-readlines": "^1.0.0",
		"tmp": "0.0.33"
	}
}
